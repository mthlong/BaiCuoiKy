<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/group_tab_radio"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorWhite">
            <RadioButton
                android:id="@+id/rb_moinhat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mới nhất"
                android:textColor="@drawable/changetext_tag_trangchu"
                android:button="@android:color/transparent"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:background="@drawable/changebackground_tab"
                android:layout_weight="1"
                android:checked="true"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"/>
            <RadioButton
                android:id="@+id/rb_danhmuc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Danh mục"
                android:textColor="@drawable/changetext_tag_trangchu"
                android:button="@android:color/transparent"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:background="@drawable/changebackground_tab"
                android:layout_weight="1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"/>
            <RadioButton
                android:id="@+id/rb_khuvuc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Khu vực"
                android:textColor="@drawable/changetext_tag_trangchu"
                android:button="@android:color/transparent"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:background="@drawable/changebackground_tab"
                android:layout_weight="1"/>
        </RadioGroup>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="686dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:drawableLeft="@drawable/nearby"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="Gần tôi"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:drawableLeft="@drawable/order"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="Giao hàng"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:drawableLeft="@drawable/gameandfun"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="Bộ sưu tập ảnh"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:drawableLeft="@drawable/review"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="Danh giá"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:drawableLeft="@drawable/blog"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="Coupon"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:drawableLeft="@drawable/user"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp"
                        android:text="Top Member"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="12sp"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="129dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        app:srcCompat="@drawable/banner1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="152dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:text="Gần tôi"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="137dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="92dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingTop="5dp"
                                android:text="Thêm"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="37dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_my_location" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="219dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="214dp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
