<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:padding="20dp"
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
    >

<ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:srcCompat="@drawable/ic_arrow_back_black_24dp"
    android:id="@+id/imageback"/>

<ImageView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:srcCompat="@drawable/ic_cart"
    android:id="@+id/img_giohang"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/nameStore"
    android:textStyle="bold"
    android:textSize="22sp"
    android:textColor="@color/colorPrimary"
    android:text="Quán cơm gà"

    android:layout_marginTop="15dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/img_giohang"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/txtLocation"
    android:textSize="12sp"
    android:textColor="@color/colorBlack"
    android:text="59 Lý Thái Tông, Q5, TPHCM"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/nameStore"/>

<ImageView
    android:layout_height="220dp"
    android:layout_width="match_parent"
    android:id="@+id/imageView5"
    android:layout_marginTop="20dp"
    android:layout_below="@id/txtLocation"
    android:src="@drawable/food11"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/name"
    android:textSize="24sp"
    android:textColor="#333333"
    android:text="Cơm gà"
    android:layout_marginTop="16dp"
    android:layout_below="@+id/imageView5"
    android:layout_toLeftOf="@+id/imageView7"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="0dp"
        android:text="25 000"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_giohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_3"
        android:text="Thêm vào giỏ hàng"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


-<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="150dp"
    android:id="@+id/thembot"
    android:layout_marginBottom="20dp"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_above="@+id/btn_giohang">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="0dp"
        android:id="@+id/removeslg"
        android:src="@drawable/ic_remove_circle"
        android:layout_weight="1"/>

    <TextView
        android:layout_height="30dp"
        android:layout_width="0dp"
        android:id="@+id/slg"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="1"
        android:layout_weight="1"
        android:gravity="center"/>

    <ImageView

        android:layout_height="30dp"
        android:layout_width="0dp"
        android:id="@+id/addslg"
        android:src="@drawable/ic_add_circle"
        android:layout_weight="1"/>

</LinearLayout>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/tvTong"
    android:textSize="18sp"
    android:textColor="@color/colorBlack"
    android:text="Tổng" android:layout_marginBottom="20dp"
    android:layout_above="@+id/btn_giohang"
    android:layout_toRightOf="@+id/thembot"
    android:layout_marginLeft="10dp"/>

<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/giatong"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="@color/colorBlack"
    android:text="1.000đ"
    android:layout_marginBottom="20dp"
    android:layout_above="@id/btn_giohang"
    android:layout_toRightOf="@id/tvTong"
    android:layout_marginLeft="10dp"/>


</RelativeLayout>