<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginLeft="16dp">

    <ImageView
        android:id="@+id/popular_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/popular_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:text="Cơm trứng"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/popular_image"
        app:layout_constraintStart_toStartOf="@+id/popular_image"
        app:layout_constraintTop_toBottomOf="@+id/popular_image" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/popular_name"
        app:layout_constraintStart_toEndOf="@+id/popular_name"
        app:layout_constraintTop_toTopOf="@+id/popular_name" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"

        android:text="25 000"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
